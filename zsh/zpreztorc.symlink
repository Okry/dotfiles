zstyle ':prezto:*:*' color 'yes'

# completion
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
zstyle ':completion:*' insert-tab pending

# The order matters.
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'command-not-found' \
  'history' \
  'directory' \
  'spectrum' \
  'utility' \
  'completion' \
  'syntax-highlighting' \
  'history-substring-search' \
  'autosuggestions' \
  'prompt'

zstyle ':prezto:module:prompt' theme 'pure'